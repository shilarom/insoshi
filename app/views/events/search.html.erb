<%- column_div :type => :primary do -%>
<h2>Listing events in '<%= params[:q] %>' <%= "within #{params[:within]} #{Geokit::default_units}" if params[:within] %> </h2>
<%= select("event", "distance", (50..500).step(50).collect {|p| [ p, p ] },
    { :prompt => 'Distance' },
    { :onchange => "document.location.href='?q=#{params[:q]}&amp;within='+this.value+''"} ) %>

<ol class="list full">
  <%= render :partial => @events %>
</ol>

<% end -%>

<% column_div :type => :secondary do -%>
  <%= render :partial => 'search' %>
  <%= render :partial => 'calendar',
             :locals => { :events => @events, :date => @date } %>

  <%= render :partial => 'event_location', :locals => { :events => @events } %>

  <h2>Add new event</h2>
  <%= link_to "Click here", new_event_path %>
<% end -%>
