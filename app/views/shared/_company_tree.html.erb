<%- if company.ancestors.length > 0 -%>
  <%- company.ancestors.reverse.each do |c| -%>
    <%= current_person.admin? ? (link_to c.name, admin_company_path(c)) : c.name -%> <%= "&gt;" -%>
  <%- end -%>
  <%= company.name -%>
<%- else -%>
  <%= company.name%>
<%- end -%>
<%- if params[:action] == 'edit' -%>
  <span class="small">[ <%= link_to "Delete", delete_company_person_path(@person)+"?company_id=#{company.id}",
                                :confirm => 'Are you sure?',
                                :method => :delete %> ]</span>
<%- end -%>