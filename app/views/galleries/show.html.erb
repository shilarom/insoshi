<div id="photos">
  <h2>Photos in <%= h(@gallery.title) %> Gallery</h2>
    <% unless @gallery.description.nil? %>
    <div class="gallery-description">
      <%- unless @gallery.description.blank? -%>
      <p><strong>Description:</strong> <%= @gallery.description %></p>
      <%- end -%>
    </div>
    <% end %>
  
    <p>
      <% if @gallery.owner_type == "Person" %>
        <% if current_person?(@gallery.owner)%>
          <%= link_to "Add photo", new_gallery_photo_path(@gallery) %> |
          <%= link_to "Edit gallery", edit_gallery_path %> |
        <% end %>
        <%= link_to "All galleries", person_path(@gallery.owner,
                                     :anchor => 'tGalleries') %>
      <% else %>
        <% if current_person.own_groups.include?(@gallery.owner)%>
          <%= link_to "Add photo", new_gallery_photo_path(@gallery) %> |
          <%= link_to "Edit gallery", edit_gallery_path %> |
        <% end %>
        <%= link_to "All galleries", group_path(@gallery.owner,
                                     :anchor => 'tGalleries') %>
      <% end %>
    </p>
  
    <%- if @photos.empty? -%>
    <h3>No photos (yet)
    <%- else -%>
      <ul>
        <%= render :partial=>"shared/photo", :collection => @photos %>
      </ul>
      <%= will_paginate(@photos) %>
    <%- end -%>
</div>